<Window x:Class="MigraPle.Windows.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="243.448" Width="281.135">
    <Grid>
        <Label x:Name="lblMsj" Content="Ingrese sus credenciales:" HorizontalAlignment="Left" Margin="98,25,0,0" VerticalAlignment="Top" Width="257"/>
        <Image HorizontalAlignment="Left" Height="70" Margin="10,10,0,0" VerticalAlignment="Top" Width="79" Source="Resources/Images/1442217909_login.png"/>
        <Label x:Name="lblMsj_Copy" Content="Usuario:" HorizontalAlignment="Left" Margin="10,85,0,0" VerticalAlignment="Top" Width="257"/>
        <Label x:Name="lblMsj_Copy1" Content="Contraseña:" HorizontalAlignment="Left" Margin="10,116,0,0" VerticalAlignment="Top" Width="257"/>
        <PasswordBox x:Name="txtPassword" HorizontalAlignment="Left" Margin="98,116,0,0" VerticalAlignment="Top" Width="120" Height="23" MaxLength="10"/>
        <TextBox x:Name="txtUsuario" HorizontalAlignment="Left" Height="23" Margin="98,85,0,0" VerticalAlignment="Top"  Width="120" MaxLength="50" MaxLines="1"
                 AcceptsReturn="False"/>
        <Button x:Name="btnLogin" Content="Ingresar" HorizontalAlignment="Left" Margin="143,161,0,0" VerticalAlignment="Top" Width="75" Click="btnLogin_Click"/>

    </Grid>
</Window>
